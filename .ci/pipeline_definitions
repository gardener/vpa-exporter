vpa-exporter:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess:
          'inject-commit-hash'
        inject_effective_version: true
      publish:
        dockerimages:
          vpa-exporter:
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/vpa-exporter'
            dockerfile: 'build/Dockerfile'
            inputs:
              repos:
                source: ~
              steps:
                build: ~
    steps:
      check:
        image: 'golang:1.12.0'
      build:
        image: 'golang:1.12.0'
        output_dir: 'binary'

  jobs:
    head-update:
      traits:
        component_descriptor: ~
        draft_release: ~
    pull-request:
      traits:
        pull-request: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
        component_descriptor: ~

  release:
    traits:
      publish:
        container_images:
          vpa-exporter:
            resource_labels:
              - name: 'cloud.gardener.cnudie/dso/scanning-hints/binary/v1'
                value:
                  policy: 'skip' # this will tell our scanning-gear that the image should not be scanned using protecode
                  comment: 'payload is a statically-linked elf-binary'
